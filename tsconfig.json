{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    
    /* Output */
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",

    /* Linting */
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}